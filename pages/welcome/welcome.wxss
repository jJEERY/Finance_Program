page {
  display: block;
  min-height: 100%;
  background-color: #101318;
}

.title-box{
  height: 80rpx;
  background-color: #1D2228;
}
.top-bar{
  width: 90%;
  display: flex;
  border-radius: 50px;
  background-color: #101318;
  margin: 0rpx 5% 15rpx 5%;
}
.input-search {
  width: 85%;
  margin: 7rpx 5% 7rpx 10%;
  font-size: 30rpx;
  font-weight: bold;
  color: #686E7A;
}
.search-icon{
  margin: 15rpx 0% 0rpx 3%;
}
.clear-icon{
  margin: 15rpx 3% 0rpx 0%;
}

.tips-bar{
  background-color: #101318;
  height: 70rpx;
}
.tips-text{
  color: #666E79;
  font-size: 14px;
  font-weight: bold;
  vertical-align: middle;
  margin-left: 5%;
}

.partition-bar{
  background-color: #1D2228;
  height: 3rpx;
  margin-left: 5%;
  margin-right: 5%;
}

.show-box{
  height: 110rpx;
  background-color: #101318;
  padding-top: 15rpx;
}
.show-name{
  margin-bottom: 10rpx;
  margin-left:  5%;
  font-size : 37rpx;
  font-family :STKaiti;
  color: #FFFFFF;
}
.show-code{
  margin-left: 5%;
  font-size : 35rpx;
  font-family: FangSong;
  color: #686E7A;
}

/*回到顶部按钮  */
.bigWrap{ 
  background:#101318; 
} 
/* /goTop回到顶部图标start/  */
.com-widget-goTop { 
  position: fixed; 
  bottom: 125px; 
  right: 5px; 
  background: rgba(0,0,0,0.48); 
  border-radius: 50%; 
  overflow: hidden; 
  z-index: 500; 
} 
.com-widget-goTop .icon-gotop{ 
  background-color: rgba(0,0,0,0.8); 
  display: inline-block; 
  width: 50px; 
  height: 50px; 
  line-height: 68px; 
  font-size: 12px; 
  color: #ffffff; 
  text-align: center; 
  border-radius: 50%; 
  background: no-repeat center -1110px;  
  -webkit-background-size: 50px auto;  
}

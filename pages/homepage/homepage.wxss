page {
  display: block;
  min-height: 100%;
  background-color: #101318;
}

.title-box{
  height: 80rpx;
  background-color: #1D2228;
}
.top-bar{
  width: 90%;
  height: 60rpx;
  background-color: #101318;
  border-radius: 7px;
  margin: 0 5% 15rpx 5%;
}
.search-icon{
  position: absolute;
  margin-left: 3%;
  margin-top: 18rpx;
}
.text-style{
  position: absolute;
  color: #666E79;
  margin-left: 10%;
  margin-top: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.text-box{
  height: 50rpx;
  background-color: #1D2228;
}
.title-text{
  color:  #3D81CC;
  margin-left: 5%;
  font-size: 28rpx;
  background-color: #1D2228;
}

.stock-line{
  height: 3rpx;
  margin-top: 12rpx;
  background-color: #666E79;
  margin-left: 2%;
  margin-right: 2%;
}
.stock-name{
  margin-top: 18rpx;
  margin-left: 5%;
  font-size : 35rpx;
  font-family :STKaiti;
  color: #FFFFFF;
}
.stock-code{
  margin-left: 5%;
  font-size : 30rpx;
  font-family :STKaiti;
  color: #686E7A;
}
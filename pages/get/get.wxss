page {
  display: block;
  min-height: 100%;
  background-color: #101318;
}
.btn {
  font-size: 20px;
}

.center {
  display: flex;
  justify-content: center;
  font-size: 38rpx;
  font-family: STKaiti;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  color: #FFFFFF;
}

#panel{
  height:39vh;
  background:#101318;
}
#panel text{
  line-height: 13vh;
  border-left: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}

.flex-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #FFFFFF;
  font-size: 0.85rem;
  font-family: STKaiti;
}
.flex-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  color: #FFFFFF;
  font-family: STKaiti;
}

.flex-cell{
  flex: 1;
}
